package hometasks;

public class Transport {
    private int wheels;
    private String type;
    private String name;


    public Transport(int wheels, String type, String name) {
        this.wheels = wheels;
        this.name = name;
        this.type = type;
    }


    public void drive() {
        System.out.println("Transport " + type + " " + name + " is driving");

    }

    public void move(int speed) {
        System.out.println("Transport is braking at speed:" + speed);
    }

}

